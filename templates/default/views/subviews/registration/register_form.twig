{{ C.Html.form(aSurveyInfo.sRegisterFormUrl,'post',({'id' : 'limesurvey', 'role' : 'form', 'class' : 'form'})) }}

{{aSurveyInfo.registerform.hiddeninputs}}

<div class='{{ aSurveyInfo.class.registerformcol }}' {{ aSurveyInfo.attr.registerformcol }}>
    {# Participants first name #}
    <div class='{{ aSurveyInfo.class.registerformcolrow }}' {{ aSurveyInfo.attr.registerformcolrow }}>
        <label for='register_firstname' class='{{ aSurveyInfo.class.registerformcolrowlabel }}control-label '>{{ gT("First name:") }}</label>
        <div class="">
            {{ C.Html.textField('register_firstname', aSurveyInfo.sFirstName, ({'id' : 'register_firstname','class' : 'form-control'})) }}
        </div>
    </div>

    {# Participants last name #}
    <div class='{{ aSurveyInfo.class.registerformcolrowb }}' {{ aSurveyInfo.attr.registerformcolrowb }}>
        <label {{ aSurveyInfo.attr.registerformcolrowblabel }}  class='{{ aSurveyInfo.class.registerformcolrowblabel }}'>{{ gT("Last name:") }}</label>
        <div {{ aSurveyInfo.attr.registerformcolrowbdiv }} >
            {{ C.Html.textField('register_lastname', aSurveyInfo.sLastName, ({'id' : 'register_lastname', 'class' : 'form-control'})) }}
        </div>
    </div>

    {# Participants email #}
    <div class='{{ aSurveyInfo.class.registerformcolrowc }}' {{ aSurveyInfo.attr.registerformcolrowc }}>
        <label {{ aSurveyInfo.attr.registerformcolrowclabel }} class='{{ aSurveyInfo.class.registerformcolrowclabel }}'> {{ gT("Email address:") }} {{ include('./subviews/required.twig') }}</label>
        <div {{ aSurveyInfo.attr.registerformcolrowcdiv }}  >
            {{ C.Html.textField('register_email', aSurveyInfo.sEmail, ({'id' : 'register_email','class' : 'form-control input-sm','required' : true})) }}
        </div>
    </div>

    {# Loop to add extra attributes #}
    {% for key, aExtraAttribute in aSurveyInfo.aExtraAttributes  %}
        <div class=' {{ aSurveyInfo.class.registerformextras }} ' {{ aSurveyInfo.attr.registerformextras }} >
            {% set registerKey = "register_" ~ key %}
            <label for="{{ registerKey }}" class='{{ aSurveyInfo.class.registerformextraslabel }} '> {{ aExtraAttribute.caption }} {% if aExtraAttribute.mandatory == 'Y' %}{{ include('./subviews/required.twig') }}{% endif %}</label>
            <div {{ aSurveyInfo.attr.registerformcolrowcdiv }} >
                {{ C.Html.textField(registerKey, aAttribute[key],({'id' : "register_{$key}",'class' : 'form-control input-sm'})) }}
            </div>
        </div>
    {% endfor %}

    {# Captcha box #}
    {% if aSurveyInfo.bCaptcha %}
        <div class='{{ aSurveyInfo.class.registerformcaptcha }}' {{ aSurveyInfo.attr.registerformcaptcha }}>
            <label class='{{ aSurveyInfo.class.registerformcaptchalabel }} ' {{ aSurveyInfo.attr.registerformcaptchalabel }} >{{ gT("Please enter the letters you see:") }} {{ include('./subviews/required.twig') }}</label>
            <div {{ aSurveyInfo.attr.registerformcaptchadiv }}>
                <div class='{{ aSurveyInfo.class.registerformcaptchadivb }}' {{ aSurveyInfo.attr.registerformcaptchadivb }}>
                    <div class='{{ aSurveyInfo.class.registerformcaptchadivc }}' {{ aSurveyInfo.attr.registerformcaptchadivc }}>
                        {{ renderCaptcha }}
                    </div>
                    <input class='{{ aSurveyInfo.class.registerformcaptchainput }}' {{ aSurveyInfo.attr.registerformcaptchainput }} >
                </div>
            </div>
        </div>
    {% endif %}

    {# Mandatory information #}
    <div class='{{ aSurveyInfo.class.registermandatoryinfo }}' {{ aSurveyInfo.attr.registermandatoryinfo }} >
            {{ gT('Fields marked with an asterisk are mandatory.')}}
    </div>

    {# Save button #}
    <div class='{{ aSurveyInfo.class.registersave }}' {{ aSurveyInfo.attr.registersave }} >
        <div class='{{ aSurveyInfo.class.registersavediv }} ' {{ aSurveyInfo.attr.registersavediv }} >
            {% set continue = gT("Continue",'unescaped') %}
            <button {{ aSurveyInfo.attr.registersavedivbutton }}  class='{{ aSurveyInfo.class.registersavedivbutton }}' >
                {{ continue }}
            </button>
        </div>
    </div>

    {# If there is additional form parts, a.e. trhough a plugin render it out here #}
    {{ aSurveyInfo.formAdditions | raw  }}
</div>

{{ C.Html.endForm }}
