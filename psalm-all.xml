<?xml version="1.0"?>
<psalm
    errorLevel="8"
    resolveFromConfigFile="true"
    reportMixedIssues="false"
    useDocblockTypes="false"
    useDocblockPropertyTypes="false"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    autoloader="tests/phpstan/phpstan_bootstrap.php"
>
    <issueHandlers>
        <UndefinedDocblockClass errorLevel="suppress" />
        <EmptyArrayAccess errorLevel="suppress" />
        <UndefinedConstant errorLevel="suppress" />
        <ParadoxicalCondition errorLevel="suppress" />
        <InvalidStaticInvocation errorLevel="suppress" />
        <!-- Yii view files use "global" variables -->
        <UndefinedGlobalVariable errorLevel="suppress" />
    </issueHandlers>
    <projectFiles>
        <directory name="application/" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="third_party" />
            <directory name="application/views" />
            <directory name="application/tests" />
            <directory name="application/helpers/Zend" />
            <directory name="application/libraries/MenuObjects/views" />
            <directory name="application/core/plugins/TwoFactorAdminLogin/views" />
            <directory name="application/extensions/AccordionWidget/views" />
            <directory name="application/extensions/AdminFooter/views" />
            <directory name="application/extensions/AdvancedSettingWidget/views" />
            <directory name="application/extensions/AlertWidget/views" />
            <directory name="application/extensions/BreadcrumbWidget/views" />
            <directory name="application/extensions/ButtonWidget/views" />
            <directory name="application/extensions/DateTimePickerWidget/views" />
            <directory name="application/extensions/FlashMessage/views" />
            <directory name="application/extensions/GeneralOptionWidget/views" />
            <directory name="application/extensions/InputWidget/views" />
            <directory name="application/extensions/LimeTopbarWidget/views" />
            <directory name="application/extensions/PanelBoxWidget/views" />
            <file name="application/libraries/simpletester.php" />
        </ignoreFiles>
    </projectFiles>
</psalm>
