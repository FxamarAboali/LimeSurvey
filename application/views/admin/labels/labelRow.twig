{#
 /**
 * Label row view (for Label Set editor)
 *
 * @var bool $first
 * @var string $language
 * @var string $sortOrder
 * @var string $code
 * @var int $assessmentValue
 * @var string $title
 * @var bool $hasLabelSetUpdatePermission
 */
#}
<tr class="labelDatas" style='white-space: nowrap;' id='row_{{ language }}_{{ sortOrder }}'>
    {% if not first %}
        <td>{{ code }}</td>
        <td>{{ assessmentValue }}</td>
    {% else %}
        <td>
            <span class="fa fa-bars bigIcons text-success"></span>
        </td>

        <td>
            <input type='hidden' class='hiddencode' value='{{ code }}'/>
            <input type='text' class='codeval  form-control  ' id='code_{{ sortOrder }}' name='code_{{ sortOrder }}' maxlength='20' size='20' value='{{ code }}'/>
        </td>

        <td>
            <input type="number" class='assessmentval  form-control  ' id='assessmentvalue_{{ sortOrder }}' style='text-align: right;' name='assessmentvalue_{{ sortOrder }}' maxlength='5' size='6' value='{{ assessmentValue }}'/>
        </td>
    {% endif %}

    <td>
        <input type='text' class=" form-control  " name='title_{{ language }}_{{ sortOrder }}' id='title_{{ language }}_{{ sortOrder }}' maxlength='3000' size='80' value="{{ title }}" />
    </td>
    <td>
        <div class="icon-btn-row">
            {% if hasLabelSetUpdatePermission %}
                <a
                    href='#'
                    class="btn btn-default btn-sm htmleditor--openmodal"
                    data-target-field-id="title_{{ language }}_{{ sortOrder }}"
                    data-toggle="tooltip"
                    title="{{ gT("Open editor") }}">
                    <i class="fa fa-edit"></i>
                </a>
                {% if first %}
                    <button class="btn btn-default btn-sm btnaddanswer" type="button" data-toggle="tooltip" title="{{ gT("Add label") }}">
                        <i class="icon-add text-success"></i>
                    </button>
                    <button class="btn btn-default btn-sm btndelanswer" type="button" data-toggle="tooltip" title="{{ gT("Delete label") }}">
                        <i class="fa fa-minus-circle text-danger "></i>
                    </button>
                {% endif %}
            {% endif %}
        </div>
    </td>
</tr>